@model Unico.Models.RegisterModel
@{
    ViewBag.Title = "Регистрация";
}

<hgroup class="title">
    <h3>Регистрация</h3>
</hgroup>

@using (Html.BeginForm()) {
    @Html.AntiForgeryToken()
    @Html.ValidationSummary()

    <fieldset>
        <legend>Форма регистрации</legend>
        <table width="500">
            <tr>
                <td>@Html.LabelFor(m => m.UserName)</td>
                <td>@Html.TextBoxFor(m => m.UserName, new { style="width:200px;" })</td>
            </tr>
            <tr>
                <td>@Html.LabelFor(m => m.Password)</td>
                <td>@Html.PasswordFor(m => m.Password, new { style="width:200px;" })</td>
            </tr>
            <tr>
                <td>@Html.LabelFor(m => m.ConfirmPassword)</td>
                <td>@Html.PasswordFor(m => m.ConfirmPassword, new { style="width:200px;" })</td>
            </tr>
            <tr>
                <td>@Html.LabelFor(m => m.Phone)</td>
                <td>+38 @Html.TextBoxFor(m => m.Phone, new { style="width:175px;" })</td>
            </tr>
            <tr>
                <td>@Html.LabelFor(m => m.Address)</td>
                <td>@Html.TextBoxFor(m => m.Address, new { style="width:200px;" })</td>
            </tr>
        </table>
        <br/>
        <input type="submit" value="Продолжить" />
    </fieldset>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
